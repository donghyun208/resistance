div.container
  div.panel.panel-default
    div.panel-heading
      h4.panel-title current players:
    div.panel-body
      span(ng-repeat="player in $ctrl.Game.model.players") {{$ctrl.Game.model.nameHash[player]}}
        br
      div.container.text-center(style="padding-top: 20px")

  button.btn.btn-primary(ng-click='$ctrl.leaveGame()') Leave Game
  br
  br
  button.btn.btn-primary(ng-click='$ctrl.startGame()', ng-show="$ctrl.Player.model._id == $ctrl.Game.model.players[0] && $ctrl.Game.model.players.length > 4") Start Game


